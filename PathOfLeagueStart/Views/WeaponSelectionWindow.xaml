<Window x:Class="PathOfLeagueStart.Views.WeaponSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathOfLeagueStart.Views"
        mc:Ignorable="d"
        Title="WeaponSelectionWindow" Height="450" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="1" Grid.Column="3">Weapon Types</Label>
        <ListBox x:Name="WeaponListBox" Grid.Row="2"></ListBox>



        <TextBox x:Name="FilterWeaponTextBox" Grid.Row="0" Grid.Column="0">Enter text here to filter results</TextBox>
    </Grid>
</Window>
